<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Web Instituto Moisés</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebInstituto.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="d-flex flex-column min-vh-100">

    <!-- Header simple -->
    <header class="bg-primary text-white text-center py-3 shadow-sm">
        <h1 class="h2 m-0">Web Instituto Moisés</h1>
    </header>

    <!-- Contenido principal -->
    <main role="main" class="flex-fill container py-4">
        @RenderBody()
    </main>

    <!-- Footer fijo abajo -->
    <footer class="bg-dark text-white text-center py-3 mt-auto">
        &copy; 2025 - Web Instituto Moisés
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
