@model CrearAsignaturasViewModel

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <h2 class="text-center mb-4">Crear Asignatura</h2>

            <form method="post" asp-action="CrearAsignatura" asp-controller="Asignaturas">
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    <label for="Name" class="form-label">Nombre</label>
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", required = "required", placeholder = "Nombre de la asignatura" })
                </div>

                <div class="mb-4">
                    <label for="Curso" class="form-label">Curso</label>
                    @Html.DropDownList("Curso", Model.Cursos, "Seleccione un curso", new { @class = "form-select", required = "required" })
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">Registrar</button>
                </div>
            </form>

        </div>
    </div>
</div>
