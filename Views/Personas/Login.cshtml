@{
    @model WebInstituto.ViewModels.Personas.LoginViewModel;

}


<h2>Login</h2>

@using (Html.BeginForm("LoginSave", "Login", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <label for="email">Correo Electrónico</label>
    @Html.TextBoxFor(m => m.Mail, new { @class = "form-control", required = "required" })

    <label for="password">Contraseña</label>
    @Html.PasswordFor(m => m.ContrasenyaHash, new { @class = "form-control", required = "required" })

    <button type="submit" class="btn btn-primary">Iniciar sesión</button>
}

@Html.ActionLink("Registrarse", "Registro", "Login")

@if (Model.TieneErrores)
{
    <div class="alert alert-danger" role="alert">
        Datos incorrectos
    </div>
}



