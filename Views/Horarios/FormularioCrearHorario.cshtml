@{
    @model FormularioHorarioViewModel;
    @using WebInstituto.ViewModels.Horarios;
    ViewData["Title"] = "Horarios";
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="text-center mb-4">
                @(Model.Id == 0 ? "Crear Horario para" : "Editar Horario de") @Model.Asignatura.Name
            </h1>

            <form method="post" asp-action="CrearHorario" asp-controller="Horarios">
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    <label for="Start" class="form-label">Inicio</label>
                    @Html.DropDownList("Start", Model.HorarioLectivo, "Seleccione una hora", new { @class = "form-select", required = "required" })
                </div>

                <div class="mb-3">
                    <label for="End" class="form-label">Fin</label>
                    @Html.DropDownList("End", Model.HorarioLectivo, "Seleccione una hora", new { @class = "form-select", required = "required" })
                </div>

                <div class="mb-4">
                    <label for="Day" class="form-label">Día</label>
                    @Html.DropDownList("Day", Model.DiasSemanales, "Seleccione un día", new { @class = "form-select", required = "required" })
                </div>
                @Html.Hidden("Id", Model.Id)
                @Html.Hidden("AsignaturaId", Model.Asignatura.Id)

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">
                        @(Model.Id == 0 ? "Registrar Horario" : "Actualizar Horario")
                    </button>
                </div>

            </form>

        </div>
    </div>
</div>

